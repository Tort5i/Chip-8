{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug CMake Target",
      "type": "cppdbg",
      "request": "launch",

      // This tells VS Code to run the selected CMake target (not a.out!)
      //"program": "~/Documents/Code/Chip-8/build/Chip-8",
      "program": "${command:cmake.launchTargetPath}",

      // Pass command-line arguments here
      "args": [],

      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",

      // Optional environment variables
      "environment": [],

      // Use an external terminal window (true) or VS Code terminal (false)
      "externalConsole": true,

      // Debugger settings (Linux = gdb, macOS = lldb, Windows = cppvsdbg)
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",

      // Ensures latest build before debugging
      "preLaunchTask": "CMake: build"
    }
  ]
}
